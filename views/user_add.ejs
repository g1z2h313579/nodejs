  <body>
    <div class="page">
      <!-- Main Navbar-->
      <% include ./common/header.ejs %>
      <div class="page-content d-flex align-items-stretch"> 
        <!-- Side Navbar -->
        <% include ./common/siderbar.ejs %>
        <div class="content-inner">
          <!-- Page Header-->
          <% include ./common/bread.ejs %>
          <section class="tables">   
            <div class="container-fluid">
              <div class="row">
                  <div class="col-lg-12">
                    <div class="card">
                      <div class="card-header d-flex align-items-center">
                        <h3 class="h4">添加</h3>
                      </div>
                      <div class="card-body">
                        <!-- <p>Lorem ipsum dolor sit amet consectetur.</p> -->
                        <form class="form-horizontal" id="user_form">
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">用户名</label>
                            <div class="col-sm-9">
                              <input id="username" type="text" placeholder="字数限定提示" class="form-control form-control-success" value="<%= dbdata ? dbdata.user : ''%>">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">密码</label>
                            <div class="col-sm-9">
                              <input id="password" type="password" placeholder="字数限定提示" class="form-control form-control-success" value="<%= dbdata ? dbdata.psd : ''%>">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">昵称</label>
                            <div class="col-sm-9">
                              <input id="nikename" type="text" placeholder="字数限定提示" class="form-control form-control-success" value="<%= dbdata ? dbdata.nik : ''%>">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">关注</label>
                            <div class="col-sm-9">
                              <input id="follow" value="<%= dbdata ? dbdata.nik : '0'%>" type="text" placeholder="字数限定提示" class="form-control form-control-success">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">粉丝</label>
                            <div class="col-sm-9">
                              <input id="fans" value="<%= dbdata ? dbdata.nik : '0'%>" type="text" placeholder="字数限定提示" class="form-control form-control-success">
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 form-control-label">头像</label>
                            <div class="col-sm-9">
                              <form id="uploadForm" enctype='multipart/form-data'>
                                  <div class="form-group">
                                      <div class="fileinput fileinput-new" data-provides="fileinput"  id="exampleInputUpload">
                                          <div class="fileinput-new thumbnail" style="width: 100px;height: auto;max-height:100px;">
                                              <img id='picImg' style="width: 100%;height: auto;max-height: 100px;" src="<%= dbdata ? dbdata.icon : '/user/noimage.png'%>" alt="" />
                                          </div>
                                          <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100px; max-height: 100px;"></div>
                                          <div>
                                              <span class="btn btn-dark small btn-file">
                                                  <span class="fileinput-new">+</span>
                                                  <span class="fileinput-exists">+</span>
                                                  <input type="file" name="pic1" id="picID" accept="image/gif,image/jpeg,image/x-png"/>
                                              </span>
                                              <a href="javascript:;" class="btn btn-dark fileinput-exists" data-dismiss="fileinput">-</a>
                                          </div>
                                      </div>
                                  </div>
                              </form>
                            </div>
                          </div>
                          <div class="form-group row">       
                            <div class="col-sm-10 offset-sm-3">
                              <input type="button" value="提交" class="btn btn-success" id="commit">
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
              </div>
            </div>
          </section>
          <!-- Page Footer-->
          <footer class="main-footer">
            <div class="container-fluid">
              <div class="row">
                <div class="col-sm-6">
                  <p>九叔去哪儿科技股份有限没责任公司 &copy; 2019-ever</p>
